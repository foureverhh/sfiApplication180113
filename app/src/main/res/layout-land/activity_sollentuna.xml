<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nackademin.foureverhh.sfiapplication180113.Sollentuna">

    <ImageView
        android:id="@+id/img_Sollentuna"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/img_Sollentuna"
        android:src="@drawable/sollutuna" />

    <TextView
        android:id="@+id/txt_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sollentunaPage"
        android:layout_below="@+id/img_Sollentuna"
        android:layout_marginTop="14dp"
        android:gravity=""
        android:text="@string/txt_Address" />

    <TextView
        android:id="@+id/solluntunaAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/sollentuanAddress" />

    <TextView
        android:id="@+id/txt_OpeningHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_Address"
        android:layout_below="@+id/solluntunaAddress"
        android:text="@string/txt_OpeningHour" />

    <LinearLayout
        android:id="@+id/sollentunaOpenTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_OpeningHour"
        android:gravity="center_vertical|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weekday1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weekday1" />

            <TextView
                android:id="@+id/sollentunaMonday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sollentunaMonday" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weekday4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weekday4" />

            <TextView
                android:id="@+id/sollentunaThursday"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sollentunaThursday" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sollentunaPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sollentunaOpenTime"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:text="@string/sollentunaPage" />

</RelativeLayout>
